<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TODO LIST</title>
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <div class="box" id="headings">
      <h1><%= title %></h1>
    </div>

    <div class="box">
        <% list.forEach(function(lists){ %>
            <form action="/delete" method="post">
                <div class="item">
             <input type="checkbox" name="checkbox" value="<%= lists._id %>" onchange="this.form.submit()">
              <p> <%= lists.name %> </p> 
                </div>
                <input type="hidden" name="listName" value="<%= title %>"></input>
            </form>
         <%}) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newList" placeholder="new item" autocomplete="off"/>
        <button type="submit" name="list" value="<%= title %> " >+</button>
      </form>
    </div>
  </body>
</html>
